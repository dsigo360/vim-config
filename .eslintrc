{
  "extends": "airbnb",
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "mocha": true,
    "jest": true,
    "jquery": true,
    "mongo": true,
    "webextentions": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": 0,
    "react/jsx-filename-extensor": 0,
    "indent": ["error", 2],
    "arrow-parens": ["error", "as-needed"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }],
    "func-names": ["error", "as-needed"],
    "consistant-return": 0 
  }
}
